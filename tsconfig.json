{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["node", "jest", "@playwright/test"],
    "isolatedModules": true
  },
  "include": ["src/**/*", "specs/**/*", "tests/**/*", "framework/**/*", "**/*.js", "codecept/**/*.ts"],
  "exclude": ["node_modules", "allure-results", "allure-report", "reports", "dist"]
}
